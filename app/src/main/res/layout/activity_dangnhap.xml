<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9C27B0" >

    <EditText
        android:id="@+id/dangnhaptk_email_text"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/chinhsuatrang_dangnhap"
        android:ems="10"
        android:hint="Nhập Email"
        android:inputType="text"
        android:paddingLeft="16dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_dangnhap"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Đăng nhập"
        android:paddingLeft="16dp"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/dangnhaptk_matkhau_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/dangnhaptk_matkhau_text"
        app:layout_constraintTop_toBottomOf="@+id/dangnhaptk_matkhau_text" />

    <EditText
        android:id="@+id/dangnhaptk_matkhau_text"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/chinhsuatrang_dangnhap"
        android:ems="10"
        android:hint="Nhập mật khẩu"
        android:paddingLeft="16dp"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/dangnhaptk_email_text"
        app:layout_constraintStart_toStartOf="@+id/dangnhaptk_email_text"
        app:layout_constraintTop_toBottomOf="@+id/dangnhaptk_email_text" />

    <TextView
        android:id="@+id/trove_dangky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trở về trang đăng ký"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/button_dangnhap"
        app:layout_constraintStart_toStartOf="@+id/button_dangnhap"
        app:layout_constraintTop_toBottomOf="@+id/button_dangnhap" />
</androidx.constraintlayout.widget.ConstraintLayout>