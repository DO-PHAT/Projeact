<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/khungdangnhap"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9C27B0"
    tools:context=".DangkyActivity">

    <EditText
        android:id="@+id/dangnhap_username_text"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/chinhsuatrang_dangnhap"
        android:ems="10"
        android:hint="Username"
        android:inputType="text"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chon_avt_dangky" />

    <EditText
        android:id="@+id/dangnhap_email_text"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/chinhsuatrang_dangnhap"
        android:ems="10"
        android:hint="Nhập Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="@+id/dangnhap_username_text"
        app:layout_constraintStart_toStartOf="@+id/dangnhap_username_text"
        app:layout_constraintTop_toBottomOf="@+id/dangnhap_username_text" />

    <EditText
        android:id="@+id/dangnhap_matkhau_text"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/chinhsuatrang_dangnhap"
        android:ems="10"
        android:hint="Nhập mật khẩu"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="@+id/dangnhap_email_text"
        app:layout_constraintStart_toStartOf="@+id/dangnhap_email_text"
        app:layout_constraintTop_toBottomOf="@+id/dangnhap_email_text" />

    <Button
        android:id="@+id/button_dangky"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="ĐĂNG KÝ"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/dangnhap_matkhau_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/dangnhap_matkhau_text"
        app:layout_constraintTop_toBottomOf="@+id/dangnhap_matkhau_text" />

    <TextView
        android:id="@+id/dangnhap_cotaikhoan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Đã có tài khoản"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/button_dangky"
        app:layout_constraintStart_toStartOf="@+id/button_dangky"
        app:layout_constraintTop_toBottomOf="@+id/button_dangky" />

    <Button
        android:id="@+id/chon_avt_dangky"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:text="CHỌN ẢNH ĐẠI DIỆN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>